<div class='exchange_box col-sm-12'>
  <div class='card'>

    <div class='card-header text-center'>
      Realize sua conversão
    </div>

    <div class='card-block'>
      <%= form_tag('/convert', method: :get, id: 'exchange_form') do %>
        <div class='local_currency'>
          <div class='form-group'>
            <label class='title' for='source_currency'>Sua Moeda</label>
            <%= select_tag 'source_currency', options_for_select(currency_list, 'BRL'), class: 'form-control inputText', id: 'source_currency' %>
          </div>

          <div class='form-group'>
            <input type='number' name='amount' id='amount' class='form-control inputText' placeholder='Valor ($10)' step='any' required>
          </div>
        </div>

        <div class='destination_currency'>
          <div class='form-group'>
            <label class='title' for='target_currency'>Moeda para Conversão</label>
            <%= select_tag 'target_currency', options_for_select(currency_list, 'EUR'), class: 'form-control inputText', id: 'target_currency' %>
          </div>
          <div class='form-group'>
            <input type='text' id='result' name='result' class='form-control inputText' placeholder='Resultado' readonly>
          </div>
        </div>
        <div>
          <button type='submit' class='btn btn-primary btn-exchange col-md-12' style='background-color: #78C2AD'>CONVERTER</button>
        </div>
      <% end %>
    </div>
  </div>
</div>
